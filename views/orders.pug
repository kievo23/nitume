extends layout

block content
  h1= title
  p Welcome to #{title}
    pre#orders
    .orders 
      each order in orders 
        strong
          =order.date
        ul
          li
            | Category: 
            =order.category
          li
            | Charge: 
            =order.price
          li
            | Distance: 
            =order.distance
          li
            | Source: 
            =order.source.placename
          li
            | Destination: 
            =order.destination.placename
          li
            | Customer: 
            =order.usernames
          li
            | Phone: 
            a(href=`tel:+${order.user.phone}`)
              =order.user.phone
          li
            a(href=`/order/${order.id}`)
              | view
        p
          table
            each item in order.items
              tr
                td
                  strong
                    =item.title
                td
                  =item.desc
        hr
  script.
